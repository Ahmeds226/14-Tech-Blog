{{! Navbar }}
<nav class="navbar">
  <div class="container">
    <div class="navbar-brand">
      <a class="navbar-item" href="../">
        Tech Blog
      </a>
      <span class="navbar-burger burger" data-target="navbarMenu">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </div>
    {{! Navbar menu }}
    <div id="navbarMenu" class="navbar-menu">
      <div class="navbar-end">
        {{! Home option }}
        <a class="navbar-item is-active">
          Home
        </a>
        {{! If the user is logged in then they will go to the dashboard }}
        {{#if logged_in}}
          <a class="navbar-item" href="./dashboard">
            Dashboard
          </a>

          {{! Logout }}
          <a class="navbar-item" id="logout">
            Logout
          </a>
        {{else}}
          {{! Login }}
          <a class="navbar-item" href="/login">
            Login
          </a>
        {{/if}}
      </div>
    </div>
  </div>
</nav>

{{! Featured post: }}
<section class="hero is-info is-small is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">Featured Posts</h1>
    </div>
  </div>
</section>

<!-- Article feed -->
<div class="container">
  <section class="articles">
    <div class="column is-8 is-offset-2">
      {{#each posts}}
        <div class="card article">
          <div class="card-content">
            <div>
              <h3><a href="./post/{{id}}">{{title}}</a></h3>
              <div class="has-text-right">
                <h4 class="has-text-weight-semibold">Posted on
                  {{formDate createdAt}}</h4>
              </div>
            </div>
            <div>
              <p>{{contents}}</p>
            </div>
          </div>
        </div>
      {{/each}}

    </div>
  </section>
</div>

