<section class="hero is-info is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-black">Signup</h3>
        <hr class="login-hr" />
        <p class="subtitle has-text-black">Please Signup to proceed.</p>
        <div class="box">
          {{! Sign up form }}
          <form>
            {{! Username field }}
            <div class="field">
              <div class="control" id="username-div">
                <input
                  class="input is-large"
                  type="text"
                  placeholder="Username"
                  autofocus=""
                  id="signup-username"
                />
              </div>
            </div>
            {{! Minimum characters }}
            <p>Must be at least 8 characters</p>
            <div class="field">

              {{! Password field}}
              <div class="control" id="password-div">
                <input
                  class="input is-large"
                  type="password"
                  placeholder="Your Password"
                  id="signup-password"
                />
              </div>
            </div>

            {{! Signup button }}
            <button
              class="button is-block is-info is-large is-fullwidth"
              id="signup-btn"
            >Signup <i class="fa fa-sign-in" aria-hidden="true"></i></button>
          </form>
        </div>
        <p class="has-text-grey">
          {{! Login instead if the user has an account }}
          <a href="/login">Login Instead?</a>
          &nbsp;Â·&nbsp;
        </p>
      </div>
    </div>
  </div>
</section>

